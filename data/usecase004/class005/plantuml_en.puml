@startuml
class Car {
  - registration
  - year : int
  - licenseNumber : String
  + move forward
  + move backward
  + stop
  + turn right
  + turn left
}

class GearBox {
  - gearRatio : float[]
  - currentGear : int
  + shift up
  + shift down
}

class Engine {
  - capacity : float
  - numberOfCylinders : int
  + start
  + brake
  + accelerate
}

class Suspension {
  - springRate : float
}

class Body {
  - numberOfDoors : int
}

class Wheel {
  - diameter : float
}

class Tire {
  - width : float
  - airPressure : float
}

class Brake {
  - type : String
  + apply
}

Car "1" -- "1" GearBox
Car "1" -- "1" Engine
Car "1" -- "1..*" Suspension
Car "1" -- "1" Body
Car "1" -- "1" Brake
Suspension "1" -- "1" Wheel
Wheel "1" -- "1" Tire
Wheel "1" -- "1" Brake
@enduml