@startuml
class 車 {
  - 登録番号
  - 年式 : int
  - ライセンス番号 : String
  + 前進する
  + 後退する
  + 停止する
  + 右折する
  + 左折する
}

class ギアボックス {
  - ギア比 : float[]
  - 現在のギア : int
  + シフトアップ
  + シフトダウン
}

class エンジン {
  - 排気量 : float
  - シリンダー数 : int
  + 始動する
  + ブレーキをかける
  + 加速する
}

class サスペンション {
  - バネ定数 : float
}

class 車体 {
  - ドア数 : int
}

class ホイール {
  - 直径 : float
}

class タイヤ {
  - 幅 : float
  - 空気圧 : float
}

class ブレーキ {
  - タイプ : String
  + 作動する
}

車 "1" -- "1" ギアボックス
車 "1" -- "1" エンジン
車 "1" -- "1..*" サスペンション
車 "1" -- "1" 車体
車 "1" -- "1" ブレーキ
サスペンション "1" -- "1" ホイール
ホイール "1" -- "1" タイヤ
ホイール "1" -- "1" ブレーキ
@enduml
